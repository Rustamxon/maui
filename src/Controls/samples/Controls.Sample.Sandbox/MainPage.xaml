<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.MainPage"
    xmlns:local="clr-namespace:Maui.Controls.Sample">
    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center" BackgroundColor="AliceBlue">
            <Frame Margin="5" x:Name="framer" CornerRadius="5" BackgroundColor="Grey" BorderColor="Red">
                <Label Text="Label that should wrap around when the screen gets smaller. Label that should wrap around when the screen gets smaller" />
            </Frame>
            <Border Margin="5" Padding="50" StrokeThickness="1" BackgroundColor="Grey">
                <Label Margin="25" Padding="25" Text="Label that should wrap around when the screen gets smaller. Label that should wrap around when the screen gets smaller" />
            </Border>
            <Button Text="Make Label smaller" Clicked="Button_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>